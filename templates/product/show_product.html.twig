{% extends "base.html.twig" %}

 {% block title %}Detail produit{% endblock %}
 
 {% block body %}
    <div class="container">
        <div class="row">

            <div class="col-md-3">
                    {% if product.statut[0] == "STATUT_DISPONIBLE" %}
                     <td> <button type="button" class="btn btn-outline-secondary" onclick="self.location.href='/add-borrowing/{{product.id}}'">Emprunter</button> </td>
                     <td> <button type="button" class="btn btn-outline-success disabled" >Rendre</button> </td>
                      {% endif %}
                   {% if product.statut[0] == "STATUT_LOUE" %}
                    <td> <button type="button" class="btn btn-outline-secondary disabled">Emprunter</button> </td>
                    <td>
                      <button type="button" class="btn btn-outline-success" onclick="self.location.href='/rendre-product/{{product.id}}'">Rendre</button>
                    </td>
                    {% endif %}
                <div><button type="button" class="btn btn-outline-info" onclick="self.location.href='/qrcode-product/{{product.id}}'">QrCode</button></div>
                <div><button type="button" class="btn btn-outline-danger" onclick="self.location.href='/delete-product/{{product.id}}'">Supprimer</button> </div>
            </div>

            <div class="col-md-9">
                <table class="table table-hover">
                    <thead>
                        <tr scope="col">nom</tr>
                        <tr scope="col">prix</tr>
                        <tr scope="col">Cat√©gorie</tr>
                        <tr scope="col">Caution</tr>
                        <tr scope="col">Etat</tr>
                        <tr scope="col">Numero de serie</tr>
                        <tr scope="col">Kit</tr>
                        <tr scope="col">Owner</tr>
                        <tr scope="col">Statut</tr>
                    </thead>
                    <tbody>
                    <td>{{product.nom}}</td>
                    <td>{{product.prix}}</td>
                    <td>{{product.categorie}}</td>
                    <td>{{product.caution}}</td>
                    <td>{{product.etat}}</td>
                    <td>{{product.numSerie}}</td>
                    <td>{{product.kit}}</td>
                    <td>{{product.owner.nom}}</td>
                    <td>{{product.statut[0]}}</td>            
                    </tbody>
                </table>
            </div>
        </div>
    </div>

 {% endblock %}
