{% extends "base.html.twig" %}


 {% block title %}Liste de mes emprunts{% endblock %}
 
    {% block body %}
    
<div class="container">
      <div class="row">
        {# <div class="col-md-3">
          {%include  'product/_filter.html.twig' with {form: form} only %}
        </div> #}

        <div class="col-md-9"> 
          <div class="grid">
            <table class="table table-hover">         
              <tbody>
              {% if listBorrowing is defined %}
                {%for borrowing in listBorrowing %}  
                 <tr>
                    <td>{% include 'borrowing/_card_borrowing.html.twig' with {borrowing: borrowing} only %}</td>                
                    <td>                    
                      <button type="button" class="btn btn-outline-primary" onclick="self.location.href='/show-product/{{borrowing.id}}'">Details</button>
                    </td>
                    <td>
                    <button type="button" class="btn btn-outline-secondary" onclick="self.location.href='/rendre-product/{{borrowing.id}}'">Rendre</button>
                    </td>
			      </tr> 
                {% endfor %}
              {%endif%}
              </tbody>
            </table> 
          </div>    
        </div>
      </div>
    </div>
{% endblock %}
