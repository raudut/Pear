{% extends 'base.html.twig' %}

	{% block title %}Bienvenue sur Pear!{% endblock %}

	{% block body %}
		<style>
			.example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
			.example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
		</style>

			<h1> Bienvenue sur Pear cher utilisateur ! </h1>

		<div>
			<p> Pear est un site de gestion de prêt de materiel.</p>

		<table style="width:100%">
			<tr>
				<td>
					<div class="card border-primary mb-3" style="max-width: 20rem;">
						<div class="card-header">J'ai des objets à prêter !</div>
						<div class="card-body">
							<button type="button" style="margin-bottom: 10px;" class="btn btn-outline-primary" onclick="self.location.href='/add-lender'">Je deviens préteur</button>

						</div>
					</div>
				</td>
				<td>
				<td>
					<div class="card border-success mb-3" style="max-width: 20rem;">
						<div class="card-header">Je veux emprunter un objet !</div>
						<div class="card-body">
							<button type="button" style="margin-bottom: 10px;" class="btn btn-outline-primary" onclick="self.location.href='/list-products-dispo'">Lister les objets</button>
						</div>
					</div>
				</td>
				</td>

			</tr>
			<tr>
				
				<td>
					<div class="card border-info mb-3" style="max-width: 20rem;">
						<div class="card-header">Gérer les emprunts
						</div>
						<div class="card-body">
							
							<button type="button" style="margin-bottom: 10px;" class="btn btn-outline-primary" onclick="self.location.href='/list-my-borrowings'">Lister mes emprunts</button>
						</div>
					</div>
				</td>

			</tr>

		</table>
	
		</div>

	{% endblock %}
