{% extends 'base.html.twig' %}

{% block title %}Modifier User!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>


    <h1>Modifier un utilisateur</h1>

  <div class="well">
  {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

  {# Les erreurs générales du formulaire. #}
  {{ form_errors(form) }}



  {# Génération manuelle et éclatée : #}
  <div class="form-group">
    {# Génération du label. #}
    {{ form_label(form.nom, "Nom", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}

    {# Affichage des erreurs pour ce champ précis. #}
    {{ form_errors(form.nom) }}

    <div class="col-sm-10">
      {# Génération de l'input. #}
      {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
    </div>
  </div>

  {# Idem pour un autre champ. #}
  <div class="form-group">
    {{ form_label(form.prenom, "Prénom", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
    {{ form_errors(form.prenom) }}
    <div class="col-sm-10">
      {{ form_widget(form.prenom, {'attr': {'class': 'form-control'}}) }}
    </div>
  </div>

<div class="form-group">
  {{form_label(form.email, "E-mail", {'label_attr' : {'class':'col-sm-2 control-label'}})}}
  {{form_errors (form.email)}}
      <div class="col-sm-10">
      {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
    </div>
</div>

<div class="form-group">
  {{form_label(form.naissance, "Date de naissance", {'label_attr' : {'class':'col-sm-2 control-label'}})}}
  {{form_errors (form.naissance)}}
      <div class="col-sm-10">
      {{ form_widget(form.naissance, {'attr': {'class': 'form-control'}}) }}
    </div>
</div>
<div class="form-group">
  {{form_label(form.roles, "Roles", {'label_attr' : {'class':'col-sm-2 control-label'}})}}
  {{form_errors (form.roles)}}
      <div class="col-sm-10">
      {{ form_widget(form.roles[0]) }}
    </div>
</div>

  {# Pour le bouton, pas de label ni d'erreur, on affiche juste le widget #}
  {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary' }}) }}

  {{ form_widget(form._token) }} 
  {{ form_end(form, {'render_rest': false}) }} 
</div> 
{% endblock %}
