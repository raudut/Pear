 {% block title %}Liste des cat√©gories{% endblock %}
     
         {% block body %}
     <div class="grid">
            <table class="table table-hover">         
              <tbody>
                {% if list is defined %}
                  {%for categorie in list %}             
                    <tr>
                      <td>{% include 'categories/_card_categorie.html.twig' with {categorie: categorie} only %}</td>                
                      <td>     
                      {% if is_granted('ROLE_ADMIN') -%}
                        <button type="button" class="btn btn-outline-primary" onclick="self.location.href='/delete-categorie/{{categorie.id}}'">Supprimer</button>   
                      
                        <button type="button" class="btn btn-outline-primary" onclick="self.location.href='/edit-categorie/{{categorie.id}}'" >Modifier</button>   
                      {% endif %}
                      </td>
                    </tr>    			
                  {% endfor %}
                {%endif%}
              </tbody>
            </table> 
          </div> 


    
{% endblock %}
